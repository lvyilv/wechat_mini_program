/* components/productsIntroduction/productIntroduction.wxss */

.swiper {
  height: 300rpx;
  width: 100%;
}

.swiper swiper-item {
  height: 300rpx;
  width: 100%;
}

.swiper image {
  height: 100%;
  margin: auto;
  display: block;
}

/* 头部标签 */
.shop-head {
  margin: 20rpx;
}

.shop-price {
  color: red;
  font-size: 50rpx;
}

.shop-introduce {
  font-weight: 600;
  margin: 0rpx 10rpx 0rpx 10rpx;
}

.shop-icon {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 20rpx 10rpx 0rpx 40rpx;
}

.shop-icon>view {
  width: 200rpx;
}

/* 底部选项部分 */
.shop-info {
  margin: 10rpx;
  padding: 20rpx;
  border-radius: 5%;
  background-color: white;
}

.shop-info>view {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  height: 100rpx;
  text-align: left;
}

.label {
  margin-left: 10rpx;
  margin-right: 50rpx;
  display: block;
  width: 80rpx;
  text-align: left;
  color: gray;
}

.label-info {
  width: 100%;
}

/* 底部 */
.bottom {
  position: fixed;
  display: flex;
  flex-direction: row;
  bottom: 0;
  background-color: white;
  width: 100%;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  height: 90rpx;
}

.img-lab {
  margin-left: 50rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.bottom-icon {
  width: 50rpx;
  height: 50rpx;
  margin: auto;
}

.bottom-button {
  display: flex;
  flex-direction: row;
  line-height: 90rpx;
  margin-left: 20rpx;
}

.bottom-button>view {
  width: 180rpx;
  text-align: center;
  color: white;
  font-weight:bolder;
}

.bottom-button>view:nth-child(1) {
  background-color: rgb(236, 156, 72);
  border-radius: 20rpx 0 0 20rpx;
}

.bottom-button>view:nth-child(2) {
  background-color: rgb(231, 96, 55);
  border-radius: 0 20rpx 20rpx 0;
}
.popup{
  display:none;
  position:fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  z-index: 1;
  background: rgba(0, 0, 0, 0.5);
  justify-content: center;
  align-items: center;
}
.popup-content {
  background: #fff;
  position: absolute;
  width: 660rpx;
  height: 500rpx;
  bottom: 120rpx;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
.introduce{
  font-size: 38rpx;
  font-weight: bold;
}
.van-button{
  font-size: 40rpx;
  position: relative;
  right: -200rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.van-button:nth-child(1){
  margin-left: 20rpx;
}
.quantity-select{
  margin-top: 30rpx;
  font-size: 38rpx;
  display: flex;
  line-height: 100rpx;
}
.select-button{
  position: relative;
  bottom: -200rpx;
  left: 360rpx;

}
.select-button van-button{
  margin-left: 20rpx;
}